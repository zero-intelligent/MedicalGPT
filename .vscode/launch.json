{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gradio_demo",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/gradio_demo.py",
            "env": {"CUDA_VISIBLE_DEVICES":"0"},
            "args": [
                "--model_type","auto",
                "--base_model","Qwen/Qwen2.5-7B",
                "--lora_model","outputs-sft-qwen-v1/checkpoint-250",
                "--cache_dir","./cache",
                "--share"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "sft",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "${workspaceFolder}/supervised_finetuning.py",
            "env": {"CUDA_VISIBLE_DEVICES":"0"},
            "args": [
                "--model_type", "auto",
                "--model_name_or_path", "Qwen/Qwen2.5-7B",
                "--train_file_dir", "./data/finetune",
                "--validation_file_dir", "./data/finetune",
                "--per_device_train_batch_size", "2",
                "--per_device_eval_batch_size", "2",
                "--do_train",
                "--do_eval",
                "--template_name", "qwen",
                "--use_peft", "True",
                "--peft_path", "./outputs-pt-qwen-v1/checkpoint-1250",
                "--max_train_samples", "1000",
                "--max_eval_samples", "10",
                "--model_max_length", "4096",
                "--num_train_epochs", "1",
                "--learning_rate", "2e-5",
                "--warmup_ratio", "0.05",
                "--weight_decay", "0.05",
                "--logging_strategy", "steps",
                "--logging_steps", "10",
                "--eval_steps", "50",
                "--evaluation_strategy", "steps",
                "--save_steps", "500",
                "--save_strategy", "steps",
                "--save_total_limit", "13",
                "--gradient_accumulation_steps", "2",
                "--preprocessing_num_workers", "4",
                "--output_dir","outputs-sft-qwen-v1",
                "--overwrite_output_dir",
                "--ddp_timeout", "30000",
                "--logging_first_step", "True",
                "--target_modules","all",
                "--lora_rank", "8",
                "--lora_alpha", "16",
                "--lora_dropout", "0.05",
                "--torch_dtype", "float16",
                "--fp16",
                "--device_map", "auto",
                "--report_to", "tensorboard",
                "--ddp_find_unused_parameters", "False",
                "--gradient_checkpointing", "True",
                "--cache_dir", "./cache"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "import_excel",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/import_excel2jsonl.py",
            "env": {"CUDA_VISIBLE_DEVICES":"0",
                    "PYTHONPATH":"${workspaceFolder}"},
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}